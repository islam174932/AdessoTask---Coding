{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
  "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "features/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
