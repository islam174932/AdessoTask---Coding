  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@playwright/test": "^1.0.0",
    "playwright": "^1.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "npm-run-all": "^4.1.5"
  }
}
