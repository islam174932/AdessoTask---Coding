{
  "name": "testproject",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "smoke": "cucumber-js --tags @smoke",
    "regression": "cucumber-js --tags @regression",
    "test": "npm run smoke && npm run regression",
    "test:parallel": "npm-run-all --parallel smoke regression",
    "smoke:headless": "HEADLESS=true npm run smoke",
